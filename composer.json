{
  "name": "dipcode/php-form",
  "description": "PHP class for form handling abstraction.",
  "license": "MIT",
  "version": "1.0.0",
  "homepage": "https://github.com/dipcode-software/php-form",
  "authors": [
    {
      "name": "Dipcode",
      "email": "team@dipcode.com",
      "homepage": "https://dipcode.com"
    }
  ],
  "support": {
    "issues": "https://github.com/dipcode-software/php-form/issues"
  },
  "require": {
    "php": ">=7.0.0",
    "fleshgrinder/format": "^1.1"
  },
  "require-dev": {
    "phpunit/phpunit": "~6.0",
    "php-coveralls/php-coveralls": "^1.0",
    "squizlabs/php_codesniffer": "*"
  },
  "autoload": {
    "psr-4": {
      "PHPForm\\" : "src/"
    },
    "files": ["config.php"]
  },
  "autoload-dev": {
    "psr-4": {
      "PHPForm\\Unit\\": "tests/"
    }
  },
  "scripts": {
    "test": [
      "phpcs --standard=phpcs.xml",
      "phpunit -c phpunit.xml"
    ]
  }
}
